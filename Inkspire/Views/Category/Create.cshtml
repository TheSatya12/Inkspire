@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        @* In order to show all the errors at single place asp-validation-summary is Used *@
            <div asp-validation-summary="All" >

            </div>
        @* In order to show all the Model errors and skip others  asp-validation-summary = ModelOnly is Used *@
            @* <div asp-validation-summary=ModelOnly >

            </div> *@

        @* end *@
        <div class="mb-4 row p-1">
            <label asp-for=Name class="p-0"></label>
            <input asp-for=Name type="text" class="form-control" />
            <span asp-validation-for=Name class="text-danger"></span>
        </div>
        <div class="mb-4 row p-1">
            <label asp-for=DisplayOrder class="p-0">Display Order</label>
            <input asp-for=DisplayOrder type="Text" class="form-control"/>
            <span asp-validation-for=DisplayOrder class="text-danger" ></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">
                    Create
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark form-control">Back</a>
            </div>

        </div>
        

    </div>
</form>
