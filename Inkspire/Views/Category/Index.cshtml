@model List<Category>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4 pb-4">
        <div class=col-6>
            
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create</a>
        </div>

    </div>
   
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-categoryId=@obj.Id class="btn btn-outline-info mx-2">Edit</a>

                    <a asp-controller="Category" asp-action="Delete" asp-route-categoryId=@obj.Id class="btn btn-outline-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
</div>